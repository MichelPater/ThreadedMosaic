{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ThreadedMosaic": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/api/mosaic-api-.log",
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "MosaicConfiguration": {
    "ImageProcessing": {
      "MaxImageWidth": 4096,
      "MaxImageHeight": 4096,
      "DefaultThumbnailWidth": 200,
      "DefaultThumbnailHeight": 200,
      "SupportedFormats": [ ".jpg", ".jpeg", ".png", ".bmp", ".gif", ".tiff", ".webp" ],
      "DefaultColorTolerance": 10.0,
      "DefaultHueTolerance": 15.0,
      "UseGpuAcceleration": false,
      "EnableImageCache": true,
      "ImageCacheMaxSize": 100,
      "ImageCacheExpirationMinutes": 60
    },
    "Performance": {
      "MaxConcurrentTasks": 0,
      "MaxMemoryUsageMB": 1024,
      "MaxDegreeOfParallelism": 0,
      "EnableBackgroundProcessing": true,
      "BackgroundTaskQueueSize": 10,
      "EnableResourceMonitoring": true,
      "ResourceMonitoringIntervalSeconds": 5,
      "ProgressReportingIntervalMs": 500
    },
    "FileManagement": {
      "TempDirectory": "",
      "TempFileCleanupAgeDays": 1,
      "AutoCleanupTempFiles": true,
      "MaxUploadFileSizeMB": 50,
      "MaxOutputFileSizeMB": 500,
      "MinimumFreeDiskSpaceMB": 1024,
      "OutputFileNamePattern": "mosaic_{timestamp}_{type}",
      "OverwriteExistingFiles": false,
      "CreateBackupCopies": false,
      "MaxBackupCopies": 3
    },
    "Logging": {
      "DefaultLogLevel": "Information",
      "EnableFileLogging": true,
      "LogDirectory": "logs",
      "LogFileNamePattern": "mosaic_{date}.log",
      "MaxLogFileSizeMB": 10,
      "MaxLogFiles": 30,
      "EnableConsoleLogging": true,
      "UseStructuredLogging": true,
      "LogPerformanceMetrics": true,
      "LogMemoryUsage": true,
      "LogDetailedTiming": false
    },
    "Quality": {
      "DefaultQuality": {
        "Jpeg": 85,
        "Webp": 80,
        "Png": 100,
        "Bmp": 100
      },
      "OptimizeForFileSize": false,
      "OptimizeForQuality": true,
      "UseProgressiveJpeg": true,
      "UseColorProfiling": false,
      "PreserveMetadata": true,
      "StrictValidation": true,
      "ValidateImageIntegrity": true
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ThreadedMosaic.db"
  },
  "Cors": {
    "PolicyName": "AllowBlazorClient",
    "AllowedOrigins": [ "https://localhost:5001", "http://localhost:5000" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "Swagger": {
    "Title": "ThreadedMosaic API",
    "Version": "v1",
    "Description": "Modern API for creating photo mosaics",
    "ContactName": "ThreadedMosaic Team",
    "ContactEmail": "support@threadedmosaic.com"
  }
}
