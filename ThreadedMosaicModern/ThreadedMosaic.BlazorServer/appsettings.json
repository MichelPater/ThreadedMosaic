{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ThreadedMosaic": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/blazor/mosaic-blazor-.log",
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "MosaicConfiguration": {
    "ImageProcessing": {
      "MaxImageWidth": 4096,
      "MaxImageHeight": 4096,
      "DefaultThumbnailWidth": 200,
      "DefaultThumbnailHeight": 200,
      "SupportedFormats": [ ".jpg", ".jpeg", ".png", ".bmp", ".gif", ".tiff", ".webp" ],
      "DefaultColorTolerance": 10.0,
      "DefaultHueTolerance": 15.0,
      "UseGpuAcceleration": false,
      "EnableImageCache": true,
      "ImageCacheMaxSize": 50,
      "ImageCacheExpirationMinutes": 30
    },
    "Performance": {
      "MaxConcurrentTasks": 2,
      "MaxMemoryUsageMB": 512,
      "MaxDegreeOfParallelism": 2,
      "EnableBackgroundProcessing": false,
      "BackgroundTaskQueueSize": 5,
      "EnableResourceMonitoring": true,
      "ResourceMonitoringIntervalSeconds": 10,
      "ProgressReportingIntervalMs": 250
    },
    "FileManagement": {
      "TempDirectory": "",
      "TempFileCleanupAgeDays": 1,
      "AutoCleanupTempFiles": true,
      "MaxUploadFileSizeMB": 25,
      "MaxOutputFileSizeMB": 250,
      "MinimumFreeDiskSpaceMB": 512,
      "OutputFileNamePattern": "mosaic_{timestamp}_{type}",
      "OverwriteExistingFiles": false,
      "CreateBackupCopies": false,
      "MaxBackupCopies": 2
    },
    "Logging": {
      "DefaultLogLevel": "Information",
      "EnableFileLogging": true,
      "LogDirectory": "logs",
      "LogFileNamePattern": "blazor_{date}.log",
      "MaxLogFileSizeMB": 5,
      "MaxLogFiles": 14,
      "EnableConsoleLogging": true,
      "UseStructuredLogging": true,
      "LogPerformanceMetrics": false,
      "LogMemoryUsage": false,
      "LogDetailedTiming": false
    },
    "Quality": {
      "DefaultQuality": {
        "Jpeg": 80,
        "Webp": 75,
        "Png": 100,
        "Bmp": 100
      },
      "OptimizeForFileSize": true,
      "OptimizeForQuality": false,
      "UseProgressiveJpeg": true,
      "UseColorProfiling": false,
      "PreserveMetadata": false,
      "StrictValidation": true,
      "ValidateImageIntegrity": true
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ThreadedMosaic.db"
  },
  "ApiConfiguration": {
    "BaseUrl": "https://localhost:7001",
    "TimeoutSeconds": 300,
    "RetryCount": 3,
    "RetryDelaySeconds": 5
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "KeepAliveInterval": "00:00:15",
    "HandshakeTimeout": "00:00:15",
    "ClientTimeoutInterval": "00:00:30"
  }
}
