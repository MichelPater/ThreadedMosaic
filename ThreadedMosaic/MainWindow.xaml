<Window x:Class="ThreadedMosaic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525"
        ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Set Seed Image Folder"
                  HorizontalAlignment="Left"
                  Height="74"
                  Margin="10,10,0,0"
                  VerticalAlignment="Top"
                  Width="497">
            <Grid HorizontalAlignment="Left"
                  Height="54"
                  Margin="10,0,-2,-2"
                  VerticalAlignment="Bottom"
                  Width="477">
                <TextBox x:Name="SeedFolderTextbox"
                         HorizontalAlignment="Left"
                         Height="23"
                         Margin="10,10,0,0"
                         VerticalAlignment="Top"
                         Width="377" />

                <Button x:Name="SeedFolderButton"
                        Content="Browse"
                        HorizontalAlignment="Left"
                        Margin="392,10,0,0"
                        VerticalAlignment="Top"
                        Width="75"
                        Click="SeedFolderButton_Click"
                        RenderTransformOrigin="-0.839,-3.529" />

            </Grid>



        </GroupBox>
        <GroupBox Header="Set Master Image"
                  HorizontalAlignment="Left"
                  Height="74"
                  Margin="10,89,0,0"
                  VerticalAlignment="Top"
                  Width="497">
            <Grid HorizontalAlignment="Left"
                  Height="54"
                  Margin="10,0,-2,-2"
                  VerticalAlignment="Bottom"
                  Width="477">
                <TextBox x:Name="MasterImageTextBox"
                         HorizontalAlignment="Left"
                         Height="23"
                         Margin="10,10,0,0"
                         VerticalAlignment="Top"
                         Width="377" />

                <Button x:Name="MasterImageButton"
                        Content="Browse"
                        HorizontalAlignment="Left"
                        Margin="392,10,0,0"
                        VerticalAlignment="Top"
                        Width="75"
                        RenderTransformOrigin="-0.839,-3.529"
                        Click="MasterImageButton_Click" />

            </Grid>



        </GroupBox>
        <GroupBox Header="Set Output Image Location"
                  HorizontalAlignment="Left"
                  Height="74"
                  Margin="10,168,0,0"
                  VerticalAlignment="Top"
                  Width="497">
            <Grid HorizontalAlignment="Left"
                  Height="54"
                  Margin="10,0,-2,-2"
                  VerticalAlignment="Bottom"
                  Width="477">
                <TextBox x:Name="OutputImageTextbox"
                         HorizontalAlignment="Left"
                         Height="23"
                         Margin="10,10,0,0"
                         VerticalAlignment="Top"
                         Width="377" />

                <Button x:Name="OutputImageButton"
                        Content="Browse"
                        HorizontalAlignment="Left"
                        Margin="392,10,0,0"
                        VerticalAlignment="Top"
                        Width="75"
                        Click="OutputImageButton_Click"
                        RenderTransformOrigin="-0.839,-3.529" />
            </Grid>
        </GroupBox>
        <ProgressBar x:Name="ConversionProgress"
                     HorizontalAlignment="Left"
                     Height="20"
                     Margin="10,280,0,0"
                     VerticalAlignment="Top"
                     Width="497" />

    </Grid>
</Window>
